<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app1="http://schemas.android.com/apk/res-auto"
    app1:cardElevation="10dp"
    app1:cardMaxElevation="10dp"
    android:layout_gravity="center"
    android:layout_margin="3dp"
   app1:cardCornerRadius="20dp"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:requiresFadingEdge="horizontal"
        android:gravity="center"
        android:layout_margin="4dp"
        android:background="@drawable/curcle_view"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_margin="6dp"
            android:id="@+id/imageGenre"

            android:layout_gravity="center"
            android:layout_width="65dp"
            android:layout_height="65dp"
            app1:srcCompat="@drawable/facebook" />

        <LinearLayout
            android:layout_margin="4dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/genreHeadLine"
                android:textStyle="bold"
                android:textSize="25sp"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/textForContinue"
                android:textStyle="italic"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>